<Window x:Class="HotelManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HotelManagement"
        xmlns:views="clr-namespace:HotelManagement.Views"
        xmlns:viewModel="clr-namespace:HotelManagement.Obstkorb.ViewModel"
        Title="Hotel Management" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- Ribbon Menü -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Home" Command="{Binding ShowFreizeitaktivitätenViewCommand}"/>
            <MenuItem Header="Freizeitaktivitäten" Command="{Binding ShowFreizeitaktivitätenViewCommand}"/>
            <MenuItem Header="Autobuchung" Command="{Binding ShowAutobuchungViewCommand}"/>
        </Menu>

        <!-- Content Control für dynamischen Inhalt -->
        <ContentControl Content="{Binding CurrentView}" Margin="10"/>
    </DockPanel>
</Window>