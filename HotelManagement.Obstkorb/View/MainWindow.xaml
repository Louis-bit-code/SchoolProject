<Window x:Class="HotelManagement.Obstkorb.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management" Height="600" Width="800">
    <DockPanel>
        <!-- Ribbon Menü -->
        <Ribbon DockPanel.Dock="Top">
            <RibbonTab Header="Home">
                <RibbonGroup Header="Navigation">
                    <RibbonButton Label="Freizeitaktivitäten" Command="{Binding ShowFreizeitaktivitätenViewCommand}" />
                    <RibbonButton Label="AutoBuchung" Command="{Binding ShowAutobuchungViewCommand}" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <!-- Hauptinhalt -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>